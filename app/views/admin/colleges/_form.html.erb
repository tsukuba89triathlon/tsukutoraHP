<%= form_with(model: college, local: true) do |form| %>
  <% if college.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.errors.prohibited',{model: t('activerecord.models.admin/college'), count: college.errors.count}) %></h2>

      <ul>
      <% college.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :school_id %>
    <%= form.collection_select :school_id, Admin::School.all, :id, :school, {}, {id: :college_school_id, class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :college %>
    <%= form.text_field :college, id: :college_college, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :abbreviation %>
    <%= form.text_field :abbreviation, id: :college_abbreviation, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>

<% end %>
