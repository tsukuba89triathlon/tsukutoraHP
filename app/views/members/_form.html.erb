<%= form_with(model: member, local: true, url: account_member_path) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <div class="form-group">
        <%= form.label :user_name %>
        <%= form.text_field :user_name, id: :member_user_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :hometown %>
        <%= form.text_field :hometown, id: :member_hometown, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :school %>
        <%= form.text_field :school, id: :member_school, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :sports %>
        <%= form.text_field :sports, id: :member_sports, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :bike %>
        <%= form.text_field :bike, id: :member_bike, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :part %>
        <%= form.text_field :part, id: :member_part, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :goal %>
        <%= form.text_field :goal, id: :member_goal, class: 'form-control' %>
      </div>

      <% 1.upto(5) do |idx| %>
        <div class="col-lg-6 form-group">
          <%= form.label "q#{idx}", "質問#{idx}" %>
          <%= form.text_field "q#{idx}", id: "member_q#{idx}", class: 'form-control' %>
        </div>
        <div class="col-lg-6 form-group">
          <%= form.label "a#{idx}", "質問#{idx}の答え" %>
          <%= form.text_field "a#{idx}", id: "member_a#{idx}", class: 'form-control' %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :last %>
        <%= form.text_field :last, id: :member_last, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
<% end %>
